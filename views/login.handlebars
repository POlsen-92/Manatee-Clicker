<div class="container">
    <div class="row">
        <div class="col-md-12 min-vh-100 d-flex flex-column justify-content-center">
            <div class="row">
                <div class="col-lg-6 col-md-8 mx-auto mt-0 pb-4">
                    <h3 class="mb-0 display-1 pb-3" id="login-text">Login</h3>
                    <div class="card rounded shadow shadow-sm">
                    </div>
                    <div class="card-body">
                        <form class="form" role="form" autocomplete="off" id="login-form">
                            <div class="form-group pb-3">
                                <input type="text" class="form-control form-control-lg rounded-0" placeholder="Username"
                                    id="username-login">
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control form-control-lg rounded-0"
                                    placeholder="Password" id="password-login">
                            </div>

                            <button type="submit" class="btn btn-info btn-lg float-right mt-3"
                                id="btnLogin">Login</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-md-8 mx-auto mt-0 pb-5">
                    <h3 class="mb-0 display-1 pb-3" id="signup-text">Sign Up</h3>
                    <div class="card rounded shadow shadow-sm">
                    </div>
                    <div class="card-body">
                        <form class="form" role="form" autocomplete="off" id="signup-form">
                            <div class="form-group pb-3">
                                <input type="text" class="form-control form-control-lg rounded-0" placeholder="Username"
                                    id="username-create">
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control form-control-lg rounded-0"
                                    placeholder="Password" id="password-create">
                            </div>
                            <button type="submit" class="btn btn-info btn-lg float-right mt-3" id="signup">Start
                                Manateeing!</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="/js/login.js"></script>